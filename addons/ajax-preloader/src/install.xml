<modification>
	<name>[underr] Live Product+ &lt; Ajax Preloader</name>
	<code>live-product--ajax-preloader</code>
	<version>1.1.0</version>
	<author>Andrii Burkatskyi aka underr</author>
	<link>https://github.com/ocmod-space/ocmod-live-product</link>

	<file path="catalog/controller/extension/module/live_product.php" error="log">
		<operation error="log">
			<search>
				<![CDATA[$data['live_product'] = array();]]>
			</search>
			<add position="after">
				<![CDATA[
				$svg = '<span id="live-product-svg-container" style="margin-left: 5px; display: none;"><svg id="live-product-svg" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" xml:space="preserve"><image id="live-product-image" x="0" y="0" xlink:href="data:image/png;base64, "></image></svg></span>';

				$data['live_product']['svg'] = $svg;]]>
			</add>
		</operation>
		<operation error="log">
			<search>
				<![CDATA[g_special_id = g_content_id + '#{$this->special_id}';]]>
			</search>
			<add position="after">
				<![CDATA[
	/// << Ajax Preloader
	let price_tag = $(g_special_id).length ? g_special_id : g_price_id;
	let svg_size = Math.round(parseFloat($(price_tag).css('font-size').replace( /^\D+/g, '')) / 1.125);

	$('#live-product-svg').attr('width', svg_size);
	$('#live-product-svg').attr('height', svg_size);

	$('#live-product-svg').attr('viewBox', '0 0 ' + svg_size + ' ' + svg_size);
	$('#live-product-svg').attr('enable-background', '0 0 ' + svg_size + ' ' + svg_size);

	$('#live-product-image').attr('width', svg_size);
	$('#live-product-image').attr('height', svg_size);
	/// Ajax Preloader >>]]>
			</add>
		</operation>
		<operation error="log">
			<search>
				<![CDATA[beforeSend: function () {}]]>
			</search>
			<add position="replace">
				<![CDATA[beforeSend: function () { $('#live-product-svg-container').show(); }]]>
			</add>
		</operation>
		<operation error="log">
			<search>
				<![CDATA[complete: function () { tags_post_data = null; }]]>
			</search>
			<add position="replace">
				<![CDATA[complete: function () { tags_post_data = null; $('#live-product-svg-container').hide(); }]]>
			</add>
		</operation>
	</file>

	<file path="catalog/view/theme/*/template/product/product.twig" error="log">
		<operation error="log">
			<search>
				<![CDATA[{% if live_product.status %}<span id="{{ live_product.ids.price_id }}" data-id="{{ live_product.ids.price_id }}">{{ price }}</span>{% else %}{{ price }}{% endif %}]]>
			</search>
			<add position="replace">
				<![CDATA[{% if live_product.status %}<span id="{{ live_product.ids.price_id }}" data-id="{{ live_product.ids.price_id }}">{{ price }}</span>{% else %}{{ price }}{% endif %}{% if live_product.status and not special %}{{ live_product.svg }}{% endif %}]]>
			</add>
		</operation>
		<operation error="log">
			<search>
				<![CDATA[{% if live_product.status %}<span id="{{ live_product.ids.special_id }}" data-id="{{ live_product.ids.special_id }}">{{ special }}</span>{% else %}{{ special }}{% endif %}]]>
			</search>
			<add position="replace">
				<![CDATA[{% if live_product.status %}<span id="{{ live_product.ids.special_id }}" data-id="{{ live_product.ids.special_id }}">{{ special }}</span>{% else %}{{ special }}{% endif %}{% if live_product.status and special %}{{ live_product.svg }}{% endif %}]]>
			</add>
		</operation>
	</file>

	<file path="catalog/view/theme/*/template/common/header.twig" error="log">
		<operation error="log">
			<search>
				<![CDATA[{% for style in styles %}]]>
			</search>
			<add position="before">
				<![CDATA[<link href="catalog/view/theme/default/stylesheet/live_product_svg_animation.css" rel="stylesheet">]]>
			</add>
		</operation>
	</file>

	<file path="catalog/view/theme/journal3/template/common/header.twig" error="log" info="Only for Journal3">
		<operation error="log">
			<search>
				<![CDATA[{% for style in j3.document.getStyles(styles) %}]]>
			</search>
			<add position="before">
				<![CDATA[<link href="catalog/view/theme/default/stylesheet/live_product_svg_animation.css" rel="stylesheet">]]>
			</add>
		</operation>
	</file>
</modification>
